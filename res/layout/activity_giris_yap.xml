<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_giris_yap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LoginArka"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="raydingoz.cerrahkulup.GirisYap">

    <CheckBox
        android:id="@+id/cb_hatirla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="beni hatırla"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/et_giris_sifre"
        android:layout_alignLeft="@+id/et_giris_sifre"
        android:layout_alignStart="@+id/et_giris_sifre"
        android:layout_alignRight="@+id/et_giris_sifre"
        android:layout_alignEnd="@+id/et_giris_sifre" />

    <Button
        android:id="@+id/btn_sifreunut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/btn_girisyap"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:text="şifremi unuttum"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn_gir_kayit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/space"
        android:layout_toRightOf="@+id/space"
        android:background="@android:color/transparent"
        android:text="Kayıt Ol"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/btn_gir_mis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/space"
        android:layout_toStartOf="@+id/space"
        android:background="@android:color/transparent"
        android:text="Misafir"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_red_light" />

    <Button
        android:id="@+id/btn_girisyap"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignEnd="@+id/et_giris_sifre"
        android:layout_alignLeft="@+id/cb_hatirla"
        android:layout_alignRight="@+id/et_giris_sifre"
        android:layout_alignStart="@+id/cb_hatirla"
        android:layout_below="@+id/cb_hatirla"
        android:layout_marginTop="15dp"
        android:background="@android:color/holo_green_light"
        android:elevation="13dp"
        android:text="Oturum aç"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_giris_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:ems="10"
        android:hint="  e-mail"
        android:inputType="textEmailAddress"
        android:textAllCaps="false"
        android:textColor="?attr/colorButtonNormal"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/et_giris_sifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_giris_mail"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint=" şifre"
        android:inputType="textPassword"
        android:textColor="?android:attr/colorButtonNormal"
        android:textColorHint="@android:color/darker_gray" />

    <ProgressBar
        android:id="@+id/progBar_gir"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cb_hatirla"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Space
        android:id="@+id/space"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
